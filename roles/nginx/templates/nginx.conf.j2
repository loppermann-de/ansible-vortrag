server{
  server_name: {{ domain }}
{% for alias in aliases %}
  {{ allias }}
{% endfor %};
  root {{ webdirectory }};
  index    index.html;
{% if public_ipv4 %}
  listen 80;
{% endif %}
{% if public_ipv6 %}
  listen [::]:80;
{% endif %}

  location / {
    charset utf-8;
    try_files $uri $uri/ =404;
  }
}

